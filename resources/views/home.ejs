    <div class=" product-section grid grid-cols-1 md:grids-cols-2 lg:grid-cols-3  col-gap-6 row-gap-8 pl-24 pr-24">
        <% cupcakes.forEach(function(cupcake) { %>
            <div class="product w-full md:w-64 ">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= cupcake.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= cupcake.name %></h2>
                    <span class="category py-1 px-4 rounded-full uppercase text-xs"><%= cupcake.size %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= cupcake.price %></span>
                        <button data-cupcake="<%= JSON.stringify(cupcake) %>"
                          class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                          <span>+</span>
                          <span class="ml-4">Add</span>
                      </button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    
  </section>
